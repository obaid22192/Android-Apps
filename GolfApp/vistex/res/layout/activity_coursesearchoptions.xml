<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.golfapp.vistex.MainActivity"
    tools:ignore="MergeRootFrame"
    android:background="@drawable/bg" >
    <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         >
        
<Button
           android:id="@+id/btnstats"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:text="@string/btnstat" 
            
           android:background="@drawable/btn_blue"
           />
</LinearLayout>
 <com.golfapp.vistex.TransparentPanel
           android:id="@+id/transparent_signin"
           android:layout_width="fill_parent"
           android:layout_height="280dp"
           android:layout_alignParentLeft="true"
           android:layout_alignParentTop="true"
           android:layout_marginTop="130dp"
           android:paddingBottom="5dp"
           android:paddingLeft="5dp"
           android:paddingRight="5dp"
           android:paddingTop="5dp" >

           <LinearLayout
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="30dp"
               android:orientation="vertical" >

               <Button
                   android:id="@+id/gcoursesearch"
                   android:layout_width="276dp"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:text="@string/GCS"
                   android:textColor="#FFFFFF"
                   android:background="#2F4F4F"
                   android:textColorLink="@android:color/white" />

               <Button
                   android:id="@+id/btnfavorite"
                   android:layout_width="276dp"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:text="Favorites"
                   android:textColor="#FFFFFF"
                   android:layout_marginTop="10dp"
                   android:background="#2F4F4F"
                   android:textColorLink="@android:color/white" />
               <Button
                   android:id="@+id/btnnearby"
                   android:layout_width="276dp"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:text="NearBy"
                   android:textColor="#FFFFFF"
                   android:layout_marginTop="10dp"
                   android:background="#2F4F4F"
                   android:textColorLink="@android:color/white" />

               <Button
                   android:id="@+id/btnviewmap"
                   android:layout_width="276dp"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:text="View On Map"
                   android:textColor="#FFFFFF"
                   android:layout_marginTop="10dp"
                   android:background="#2F4F4F"
                   android:textColorLink="@android:color/white" />
            
           </LinearLayout>

          

       </com.golfapp.vistex.TransparentPanel>
       </RelativeLayout>